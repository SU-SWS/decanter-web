{#
 # HTML Template.
 #}
<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ config.title|default('Decanter') }}</title>
    {% include "head/meta.twig" %}
    {% include "head/scripts.twig" %}
    {% include "head/styles.twig" %}
  </head>
  <body>
    {% include "@decanter/components/brand-bar/brand-bar.twig" %}
    <header>
    {% block primarynav %}
    <div class="centered-container">
      {% include "navigation/primary.twig" %}
    </div>
    {% endblock %}
    </header>

    {% block content %}
    <article>
      <header>
        <h1>{{ page.title }}</h1>
      </header>
      <section>
        {{ page.content }}
      </section>
    </article>
    {% endblock %}

    <footer id="footer">
    {% block footer %}
    {% endblock %}
    {% include "@decanter/components/global-footer/global-footer.twig" %}
    </footer>
  </body>
</html>
