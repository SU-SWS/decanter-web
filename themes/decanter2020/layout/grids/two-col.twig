<div class="layout">
  <section class="flex-container centered-container">
    {% if page.title is not empty %}
    <header class="flex-12-of-12">
      <h1>{{ page.title }}</h1>
    </header>
    {% endif %}
    <div class="flex-md-4-of-12">
      {% block sidebar %}
        {% include "@hexo/navigation/secondary.twig" %}
        {{ page.sidebar }}
      {% endblock %}
    </div>
    <div class="flex-md-8-of-12">
      {% block prmary %}
        {{ page.content }}
      {% endblock %}
    </div>
  </section>
</div>
